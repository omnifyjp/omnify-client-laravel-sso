{
  "name": "@famgia/omnify-mcp",
  "version": "2.0.3",
  "description": "MCP Server for Omnify schema - enables AI assistants to create and validate schemas",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "omnify-mcp": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "yaml": "^2.6.1",
    "zod": "^4.3.5",
    "@famgia/omnify-types": "2.0.3",
    "@famgia/omnify-core": "2.0.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "typescript": "^5.7.0",
    "tsup": "^8.5.0",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "omnify",
    "mcp",
    "model-context-protocol",
    "ai",
    "schema",
    "code-generation",
    "laravel",
    "typescript"
  ],
  "author": "famgia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ecsol/omnify-ts.git",
    "directory": "packages/mcp-server"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  }
}