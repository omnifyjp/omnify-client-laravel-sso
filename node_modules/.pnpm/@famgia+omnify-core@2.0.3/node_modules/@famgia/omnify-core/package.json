{
  "name": "@famgia/omnify-core",
  "version": "2.0.3",
  "description": "Core engine for omnify-schema",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src/ai-guides/knowledge",
    "src/ai-guides/config",
    "README.md"
  ],
  "dependencies": {
    "js-yaml": "^4.1.1",
    "yaml": "^2.7.0",
    "@famgia/omnify-types": "2.0.3"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  }
}